{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@database/*": ["src/database/*"],
			"@media/*": ["src/media/*"],
			"@pages/*": ["src/pages/*"],
			"@popups/*": ["src/popups/*"],
			"@providers/*": ["src/providers/*"],
			"@reducers/*": ["src/reducers/*"],
			"@styles/*": ["src/styles/*"],
			"@utils/*": ["src/utils/*"]
		}
	},
	"include": ["src", "src/database"],
	"exclude": ["node_modules", "dist"]
}
